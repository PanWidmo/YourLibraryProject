<Window x:Class="NowyProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NowyProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#2e3137">
        <Button Background="#545d6a" Foreground="#fff" x:Name="registerFirstScreen" Content="Register" HorizontalAlignment="Left" FontSize="30" Margin="94,0,0,0" VerticalAlignment="Center" Height="84" Width="206" Click="registerFirstScreen_Click"/>
        <Button Background="#545d6a" Foreground="#fff" x:Name="logInFirstScreen" Content="Log In" HorizontalAlignment="Left" FontSize="30" Margin="482,0,0,0" VerticalAlignment="Center" Height="84" Width="206" Click="logInFirstScreen_Click"/>
        <Label Foreground="#fff" Content="Welcome to YourLibrary.com" FontSize="40"  HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Height="64" Width="520"/>

    </Grid>
</Window>
